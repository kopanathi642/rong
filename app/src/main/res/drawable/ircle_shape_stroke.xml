<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- This defines the border (stroke) of the circle -->
    <stroke            android:width="2dp"
        android:color="@android:color/black" /> <!-- You can change the color -->

    <!-- This defines the solid color inside the circle -->
    <solid
        android:color="@android:color/transparent" /> <!-- Or any other color you need -->

</shape>
