<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A"> <!-- Midnight Navy Background -->

    <!-- BACKGROUND AMBIENT GLOWS (Decorative Blobs) -->
    <!-- Top Right Purple Glow -->
    <View
        android:id="@+id/glow_1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:alpha="0.4"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#8B5CF6"
        android:translationX="100dp"
        android:translationY="-100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bottom Left Cyan Glow -->
    <View
        android:id="@+id/glow_2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:alpha="0.3"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#06B6D4"
        android:translationX="-80dp"
        android:translationY="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- HEADER SECTION -->
    <TextView
        android:id="@+id/tv_week_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif-thin"
        android:letterSpacing="0.1"
        android:text="WEEK 42"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Focus on the climb."
        android:textColor="#94A3B8"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/tv_week_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_week_title" />

    <!-- PROGRESS INDICATOR (Top Right) -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/circle_shape_stroke"
        android:progress="35"
        android:progressDrawable="@drawable/circular_progress"
        app:layout_constraintBottom_toBottomOf="@+id/tv_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_week_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35%"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="@+id/progressBar"
        app:layout_constraintStart_toStartOf="@+id/progressBar"
        app:layout_constraintTop_toTopOf="@+id/progressBar" />

    <!-- SCROLLABLE CONTENT AREA -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp">

            <!-- CONNECTING PATH LINE (Dashed) -->
            <!-- Simplification: A view acting as the timeline spine -->
            <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:alpha="0.2"
                android:background="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- GOAL CARD 1: LEFT ALIGNED (Monday) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_goal_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#1AFFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="#33FFFFFF"
                app:strokeWidth="1dp">

                <!-- To enable the glass effect properly on CardView,
                     ensure cardBackgroundColor is semi-transparent
                     and elevation is 0dp. -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:text="MON / TUE"
                        android:textColor="#06B6D4"
                        android:textSize="12sp"
                        android:letterSpacing="0.2"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Gym &amp; Cardio"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="0/3 Sessions Completed"
                        android:textColor="#94A3B8"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- GOAL CARD 2: RIGHT ALIGNED (Wednesday) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_goal_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="24dp"
                app:cardBackgroundColor="#1AFFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_goal_1"
                app:strokeColor="#33FFFFFF"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:text="WEDNESDAY"
                        android:textColor="#8B5CF6"
                        android:textSize="12sp"
                        android:letterSpacing="0.2"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Deep Work: Coding"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- GOAL CARD 3: CENTER ALIGNED (Weekend) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_goal_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="24dp"
                app:cardBackgroundColor="#2606B6D4"
                app:cardCornerRadius="32dp"
                app:cardElevation="10dp"
                app:layout_constraintWidth_percent="0.85"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_goal_2"
                app:strokeColor="#06B6D4"
                app:strokeWidth="1dp">

                <!-- Slightly stronger background for the "Weekend Boss" -->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tv_card3_header"
                        android:text="WEEKEND SPRINT"
                        android:textColor="#06B6D4"
                        android:textSize="12sp"
                        android:letterSpacing="0.2"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:text="Launch Side Project"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_card3_header"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_media_play"
                        app:tint="#FFFFFF"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FLOATING ACTION BUTTON -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_input_add"
        android:backgroundTint="#8B5CF6"
        app:tint="#FFFFFF"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

    <!--
        RESOURCE HELPER NOTES:

        1. rounded_bg.xml (for the circle views):
           <shape android:shape="oval"><solid android:color="#FFFFFF"/></shape>

        2. circular_progress.xml (drawable):
           RotateDrawable wrapping a Shape Ring with gradient.

        3. Colors:
           Primary Dark: #0F172A
           Neon Cyan: #06B6D4
           Electric Purple: #8B5CF6
    -->